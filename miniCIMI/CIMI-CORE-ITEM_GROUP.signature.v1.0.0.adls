definition
	ITEM_GROUP[id1.1] matches {	-- Signature
		/item matches {
			use_archetype ITEM_GROUP[id3, CIMI-CORE-ITEM_GROUP.cluster.v1] occurrences matches {0..*} 
			after [id2]
			ELEMENT[id0.5] occurrences matches {1..*} matches {	-- Type
				value matches {
					CODED_TEXT[id0.201] 
				}
			}
			ELEMENT[id0.10] occurrences matches {1..1} matches {	-- When
				value matches {
					DATE_TIME[id0.210] 
				}
			}
			ELEMENT[id0.15] occurrences matches {0..1} matches {	-- MimeType
				value matches {
					CODED_TEXT[id0.215] 
				}
			}
			ELEMENT[id0.20] occurrences matches {0..1} matches {	-- SignatureContent
				value matches {
					ENCAPSULATED[id0.220] 
				}
			}
		}
		participation matches { 
			PARTICIPATION[id0.100] occurrences matches {0..1} matches { -- Signer
		        party matches {
		          ACTOR[id0.110]
		        }
      		}
		}
	}

