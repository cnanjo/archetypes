definition
  ITEM_GROUP[id1.1] matches { -- Justification
    /item matches {
		use_archetype ITEM_GROUP[id3, CIMI-CORE-ITEM_GROUP.cluster.v1] occurrences matches {0..*} 
		ELEMENT[id0.5] occurrences matches {0..1} matches {
			value matches {
			  CODED_TEXT[id205]
			}
		}
		use_archetype ITEM_GROUP[id0.10, CIMI-CORE-ITEM_GROUP.clinical_statement.v1] occurrences matches {0..1}
    }
  }

terminology
  term_definitions = <
    ["en"] = <
      ["id1.1"] = <
        text = <"Justification">
        description = <"Asserted clinical justification to perform or not perform an act such as a diagnostic test, a medication treatment, or a procedure. The justification can be specified as a code or as a clinical statement, e.g., code for diabetes (ICD-9-CM 250.0) or a Condition occurrence statement (with diabetes code) documented elsewhere in a patient's record.">
      >
      ["id0.5"] = <
        text = <"code">
        description = <"A code representing the justification. Typically, the code is for a condition that is suspected or is observed in a patient.">
      >
      ["id0.10"] = <
        text = <"supportingStatement">
        description = <"A clinical statement that lends support for the action.">
      >
    >
  >
